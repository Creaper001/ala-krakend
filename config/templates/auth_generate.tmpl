{{- define "auth_generate" -}}
  {
    "endpoint": "/auth/generate",
    "method": "POST",
    "backend": [
      {
        "url_pattern": "/auth/generate",
        "method": "POST",
        "extra_config": {
          "modifier/martian": {
            "fifo.Group": {
              "scope": ["request"],
              "modifiers": [
                {
                  "body.Modifier": {
                    "body": "{{- toJson .auth_token | b64enc -}}"
                  }
                },
                {
                  "header.Modifier": {
                    "name": "Content-Type",
                    "value": "application/json"
                  }
                }
              ]
            }
          }
        }
      }
    ]
  }
{{- end -}}